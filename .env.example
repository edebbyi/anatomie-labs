# Environment
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=designer_bff
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://username:password@localhost:5432/designer_bff

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_TIME=7d

# VLT API Configuration (Visual Language Transformer)
VLT_API_URL=https://visual-descriptor-516904417440.us-central1.run.app
VLT_API_KEY=your_vlt_api_key_here
VLT_DEFAULT_MODEL=gemini
VLT_DEFAULT_PASSES=A,B,C

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_VISION_MODEL=gpt-4-vision-preview

# Anthropic Configuration (for prompt enhancement)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google Cloud Configuration (for Speech-to-Text)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_SPEECH_LANGUAGE_CODE=en-US

# Image Generation APIs
IMAGEN_API_KEY=your_imagen_api_key
DALLE_API_KEY=your_dalle_api_key
MIDJOURNEY_API_KEY=your_midjourney_api_key
STABLE_DIFFUSION_API_KEY=your_stable_diffusion_api_key

# Image Enhancement APIs
GFPGAN_API_URL=your_gfpgan_service_url
REAL_ESRGAN_API_URL=your_real_esrgan_service_url
ENHANCEMENT_API_KEY=your_enhancement_api_key

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=public/uploads
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Cloudflare R2 Storage (for images)
R2_ENDPOINT=https://<your-account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=designer-bff-images
R2_CDN_URL=https://images.yourdomain.com

# Pinecone Configuration (vector storage for personas)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=designer-bff-styles

# Airtable Configuration (keep existing analytics)
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id
AIRTABLE_TABLE_NAME=your_table_name

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email Configuration (for notifications)
EMAIL_FROM=noreply@designerbff.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Cron Job Schedule (for nightly generation)
NIGHTLY_GENERATION_CRON=0 2 * * *
NIGHTLY_PROMPT_COUNT=50
NIGHTLY_IMAGES_PER_PROMPT=4

# Cost Tracking
COST_TRACKING_ENABLED=true
MONTHLY_BUDGET_LIMIT=1000
COST_ALERT_THRESHOLD=0.8

# Feature Flags
VOICE_COMMANDS_ENABLED=true
REAL_TIME_GENERATION=true
MULTI_USER_COLLABORATION=true
ANALYTICS_DASHBOARD=true