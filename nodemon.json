{
  "watch": ["server.js", "src/**/*.js"],
  "ignore": [
    "node_modules/**",
    "public/**",
    "uploads/**",
    "tmp/**",
    "*.log",
    "*.json"
  ],
  "delay": 2000,
  "events": {
    "restart": "echo 'Nodemon restarting...' && date",
    "crash": "echo 'Nodemon crashed!' && date"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}